<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/dinmd</item>
    </style>

    <style name="ToolbarRightText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="homeRb">
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/dp_3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hometv">
        <item name="android:textColor">@color/bright_gray</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:layout_marginStart">@dimen/dp_4</item>
    </style>
    <style name="hometv2">
        <item name="android:drawablePadding">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
    </style>





</resources>
