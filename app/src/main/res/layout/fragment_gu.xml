<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.fragment.GuFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/business_car_1"
                android:layout_width="wrap_content"
                android:src="@drawable/business_car_1"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/gu_data"
                android:layout_width="wrap_content"
                android:text="@string/gu_data"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/business_car_1"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/business_car_1"
                android:layout_below="@+id/gu_data"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/gu_normal"
                android:textColor="@color/pastel_green"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:background="@color/bg_bottom_navigation"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_200"
        android:src="@drawable/carmodel"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_m_20"
        android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>