<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MyInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView

            android:id="@+id/register_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:text="@string/my_info_title"
            android:textColor="@color/hei"
            android:textSize="16sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/my_info_mgs"
            android:textColor="@color/hei"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/my_arrow" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/me_pic"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_toStartOf="@+id/iv"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@drawable/user_normal" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/my_msg2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/my_info_mgs2"
            android:textColor="@color/hei"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/my_arrow" />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_toStartOf="@+id/iv2"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="吴遵"
            android:textColor="@color/carmine_pink"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/my_msg3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/my_info_mgs3"
            android:textColor="@color/hei"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/my_arrow" />
        <TextView
            android:id="@+id/my_bir"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_toStartOf="@+id/iv3"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="1993-07-21"
            android:textColor="@color/carmine_pink"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/my_msg4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/my_info_mgs4"
            android:textColor="@color/hei"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/my_arrow" />
        <TextView
            android:id="@+id/my_sex"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_toStartOf="@+id/iv4"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="男"
            android:textColor="@color/carmine_pink"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/my_msg5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/my_info_mgs5"
            android:textColor="@color/hei"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/my_arrow" />
        <TextView
            android:id="@+id/my_address"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_toStartOf="@+id/iv5"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="广东省深圳市"
            android:textColor="@color/carmine_pink"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:id="@+id/my_msg6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/my_info_mgs6"

            android:textColor="@color/hei"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/my_arrow" />
        <TextView
            android:id="@+id/my_msg"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_toStartOf="@+id/iv6"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="最美好的愿望就是，做自己..."
            android:textColor="@color/carmine_pink"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color"
        android:layout_height="@dimen/dp_1"/>

</LinearLayout>