<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/item_title"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:textColor="@color/silver_sand"
        android:text="夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路夜路"
        android:layout_height="wrap_content" />
    <com.ocnyang.pagetransformerhelp.BannerViewPager
        android:id="@+id/item_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintDimensionRatio="19:10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/login_bg"/>
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:text="驾驶注意要点"
                android:layout_toEndOf="@+id/item_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/bright_gray"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_like"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_alignParentEnd="true"
                android:textColor="@color/hei"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/community_like"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/item_like"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@drawable/community_like"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_comments"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_toStartOf="@+id/community_like"
                android:textColor="@color/hei"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/community_comments"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/item_comments"
                android:src="@drawable/community_comments"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/community_collect"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/community_comments"
                android:src="@drawable/community_collect"
                android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>