<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.JingFragment">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_400"
        android:layout_centerInParent="true"
        android:src="@drawable/carmodel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bg"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/car_warning1"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/business_car_warning"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/top_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_warning1"
                android:layout_marginStart="@dimen/dp_5"
                android:text="160 bar"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/car_warning"
                android:layout_below="@+id/top_left"
                android:textColor="@color/mandy"
                android:visibility="gone"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_2"
            android:background="@color/pastel_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:text="239"
            android:textColor="@color/black" />

        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_2"
            android:background="@color/pastel_green" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/car_warning2"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/business_car_warning"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/top_rig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_warning2"
                android:layout_marginStart="@dimen/dp_5"
                android:text="160 bar"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/car_warning2"
                android:layout_below="@+id/top_rig"
                android:visibility="gone"
                android:textColor="@color/mandy"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bg"
        android:layout_marginBottom="@dimen/dp_60"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/car_warning3"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/business_car_warning"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_warning3"
                android:layout_marginStart="@dimen/dp_5"
                android:text="160 bar"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/bleft"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/car_warning3"
                android:layout_below="@+id/bottom_left"
                android:textColor="@color/mandy"
                android:visibility="gone"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_2"
            android:background="@color/pastel_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:text="239"
            android:textColor="@color/black" />

        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_2"
            android:background="@color/pastel_green" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/car_warning4"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/business_car_warning"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bottom_rig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_warning4"
            android:layout_marginStart="@dimen/dp_5"
            android:text="160 bar"
            android:textColor="@color/black" />
            <TextView
                android:id="@+id/bright"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/car_warning4"
                android:layout_below="@+id/bottom_rig"
                android:textColor="@color/mandy"
                android:visibility="gone"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>