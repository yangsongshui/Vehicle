<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <TextView
        android:id="@+id/device_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CJ201810240143"
        android:textColor="@color/hei"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/hei" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/device_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@+id/device_logo"
            android:text="雷克萨斯"
            android:textColor="@color/hei"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/device_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_name"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@+id/device_logo"
            android:text="ES300"
            android:textColor="@color/zircon"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/device_kuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_num"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/device_logo"
            android:text="车况："
            android:textColor="@color/zircon"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/devicee_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mandy"
            android:textSize="@dimen/sp_13"
            android:layout_alignTop="@+id/device_kuang"
            android:layout_toEndOf="@+id/device_kuang"
            android:text="异常" />
    </RelativeLayout>
</LinearLayout>